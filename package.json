{
  "name": "wiki-editor",
  "displayName": "Wiki Editor",
  "publisher": "dentolos19",
  "description": "An easy way to quickly edit wikis locally inside your editor!",
  "version": "1.2.0",
  "icon": "public/icon.png",
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/dentolos19/wiki-editor.git"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "wiki-editor.openWiki",
        "category": "Wiki Editor",
        "title": "Open Wiki"
      },
      {
        "command": "wiki-editor.publishWiki",
        "category": "Wiki Editor",
        "title": "Publish Wiki"
      },
      {
        "command": "wiki-editor.cleanCache",
        "category": "Wiki Editor",
        "title": "Clean Cache"
      }
    ],
    "configuration": {
      "title": "Wiki Editor",
      "properties": {
        "wiki-editor.workspace.isWikiWorkspace": {
          "type": "boolean",
          "default": false,
          "description": "Whether the current workspace is a wiki workspace. Do not set manually!"
        },
        "wiki-editor.workspace.repoFullName": {
          "type": "string",
          "default": "",
          "description": "The GitHub repository that the wiki belongs to. Do not set manually!"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "esbuild src/extension.ts --bundle --outfile=out/extension.js --format=cjs --platform=node --external:vscode --minify",
    "pretest": "npm run compile && npm run lint",
    "watch": "tsc -watch -p .",
    "compile": "tsc -p .",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "pack": "vsce pack --no-dependencies --out out/extension.vsix"
  },
  "dependencies": {
    "octokit": "^3.2.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.11",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^2.32.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.1",
    "typescript": "^5.9.2"
  }
}